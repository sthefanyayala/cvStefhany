<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BackgroundActivity">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="42dp"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/card_flecha"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:srcCompat="?attr/homeAsUpIndicator" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="46dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:drawableStart="@drawable/ic_keyboard"
                android:gravity="center|center_horizontal"
                android:text="Background"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold"

                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/purwadhika"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/purwadhika" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Purwadhika Startup and Coding School"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:id="@+id/Background"
                        android:layout_width="283dp"
                        android:layout_height="98dp"
                        android:background="@drawable/bg_header"
                        android:elevation="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="287dp"
                            android:layout_height="115dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="UI/UX job Connector Program"
                                android:textColor="@color/grey_900"
                                android:textSize="13dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-2021"
                        android:textSize="13dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenInsitut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/bandung_logo" />


                <LinearLayout
                    android:layout_width="279dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Institut Teknologi Bandung"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Bachelor of Architecture"
                        android:textColor="@color/grey_900"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014-2018"
                        android:textSize="13dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/formas"
        android:layout_width="match_parent"
        android:layout_height="21dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="52dp"
            android:orientation="vertical"
            android:padding="0dp">

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:padding="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFigma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenFigma"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/figma" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/fima"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="33dp"
                            android:layout_alignBaseline="@+id/textfima"
                            android:layout_marginTop="-20dp"
                            android:angle="-90"
                            android:indeterminateDrawable="@drawable/borde_progress"
                            android:progress="85"
                            android:progressTint="@color/teal_200"
                            android:scaleY="2">

                        </ProgressBar>

                        <TextView
                            android:id="@+id/textfima"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="Figma"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFacil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenUniversity"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/coreldraw" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/textcorel"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-20dp"
                            android:progressTint="@color/teal_200"
                            android:scaleY="2"
                            android:angle="-90"
                            android:indeterminateDrawable="@drawable/borde_progress"
                            android:layout_alignBaseline="@+id/textCorel"
                            android:progress="74">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/textCorel"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="Corel Draw"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardAdobe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenPhotoshop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/adobe" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-20dp"
                            android:progressTint="@color/teal_200"
                            android:scaleY="2"
                            android:angle="-90"
                            android:indeterminateDrawable="@drawable/borde_progress"
                            android:layout_alignBaseline="@+id/textAdobePhotoshop"
                            android:progress="54">

                        </ProgressBar>


                        <TextView
                            android:id="@+id/textAdobePhotoshop"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="Adobe Photoshop"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIndesing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenIndesing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/adobeindesign" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <ProgressBar
                        android:id="@+id/textIndesing"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-20dp"
                        android:progressTint="@color/teal_200"
                        android:scaleY="2"
                        android:angle="-90"
                        android:indeterminateDrawable="@drawable/borde_progress"
                        android:layout_alignBaseline="@+id/textAdobeIndesing"
                        android:progress="65">
                    </ProgressBar>

                    <TextView
                        android:id="@+id/textAdobeIndesing"
                        android:layout_width="286dp"
                        android:layout_height="52dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="Adobe Indesing"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardSketchUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenInsitute"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/sketchup" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/scketchup"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-20dp"
                            android:progressTint="@color/teal_200"
                            android:scaleY="2"
                            android:angle="-90"
                            android:indeterminateDrawable="@drawable/borde_progress"
                            android:layout_alignBaseline="@+id/textSketchUp"
                            android:progress="73">

                        </ProgressBar>


                        <TextView
                            android:id="@+id/textSketchUp"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="-20dp"
                            android:text="SketchUp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>